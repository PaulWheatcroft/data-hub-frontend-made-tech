{% extends "investment/_layout.njk" %}

{% block main_grid_right_column %}
  <h2 class="heading-medium">Investment project summary</h2>
  {% component 'key-value-table', items=investmentProject.details, variant='striped' %}
  <p>
    <a href="/investment/{{ investmentProject.meta.id }}/details/edit" class="button-secondary">Edit summary</a>
  </p>

  <h2 class="heading-medium">Value</h2>
  {% component 'key-value-table', items=investmentProject.value, variant='striped' %}
  <p>
    <a href="/investment/{{ investmentProject.meta.id }}/value/create" class="button">Start</a>
  </p>

  <h2 class="heading-medium">Requirements and location</h2>
  {% component 'key-value-table', items=investmentProject.requirements, variant='striped' %}
  <p>
    <a href="/investment/{{ investmentProject.meta.id }}/requirements/create" class="button">Start</a>
  </p>

  <h2 class="heading-medium">Referral source</h2>
  {% component 'key-value-table', {
    items: {
      'Activity': null,
      'Event': null,
      'Adviser': null
    },
    variant: 'striped'
  } %}
{% endblock %}
